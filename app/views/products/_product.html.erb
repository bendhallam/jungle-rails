<article class="product-item <%= 'soldout' if product.quantity == 0 %>">
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end %>

  <div>
    <!-- Check if product has inventory, and if so, create an add button -->
    <% if product.quantity > 0 %>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn', method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %>
      <% end %>
    <!-- Check if product is sold out and if so, blur the add button and create a sold out button badge -->
    <% else %>
      <button class="soldout" disabled>Sold Out</button>
      <button class="btn" disabled>
        <%= fa_icon "shopping-cart", text: 'Add' %>
      </button>
    <% end %>
    
  </div>
</article>