<tr>
  <td>
    <%= image_tag line_item.product.image.thumb.url, alt: line_item.product.name, class: 'img-fluid' %>
  </td>
  <td>
    <%= line_item.product.name %>
    <p><%= line_item.product.description %></p>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol(line_item.total_price) %>
  </td>
</tr>